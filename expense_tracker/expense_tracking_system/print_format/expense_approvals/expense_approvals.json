 "font_size": 14,
 "html": "<!DOCTYPE html>\r\n<html>\r\n<head>\r\n    <style>\r\n        body {\r\n            font-family: Arial, sans-serif;\r\n            margin: 20px;\r\n        }\r\n        table {\r\n            width: 100%;\r\n            border-collapse: collapse;\r\n        }\r\n        th, td {\r\n            border: 1px solid #ddd;\r\n            padding: 8px;\r\n        }\r\n        th {\r\n            background-color: #E5B4D2;\r\n        }\r\n        tr:hover {\r\n            background-color: #ddd; \r\n        }\r\n        .header {\r\n            text-align: center;\r\n            font-size: 24px;\r\n            margin-bottom: 20px;\r\n            color: #D6A7F7;\r\n        }\r\n        \r\n    </style>\r\n</head>\r\n<body>\r\n    \r\n{% if letter_head %}\r\n    <div class=\"letterhead\">\r\n        {{ letter_head | safe }}\r\n    </div>\r\n{% endif %}\r\n\r\n<div class=\"header\">\r\n    <h3>Expense Approval Form</h3>\r\n</div>\r\n\r\n<table>\r\n    <thead>\r\n        <tr>\r\n            <th>Expense Date</th>\r\n            <th>Category</th>\r\n            <th>Vendor</th>\r\n            <th>Amount</th>\r\n            <th>Description</th>\r\n            <th>Status</th>\r\n            <th>Approval Required</th>\r\n        </tr>\r\n    </thead>\r\n    <tbody>\r\n        {%- set expenses = frappe.get_all('Expenses', fields=['expense_date', 'category', 'vendor', 'amount', 'description', 'status', 'approval_required']) -%}\r\n        {%- for record in expenses -%}\r\n            <tr>\r\n                <td>{{ record.expense_date }}</td>\r\n                <td>{{ record.category }}</td>\r\n                <td>{{ record.vendor }}</td>\r\n                <td>{{ record.amount }}</td>\r\n                <td>{{ record.description }}</td>\r\n                <td>{{ record.status }}</td>\r\n                <td>{{ record.approval_required }}</td>\r\n            </tr>\r\n        {% endfor %}\r\n    </tbody>\r\n</table>\r\n\r\n<hr>\r\n\r\n<div class=\"header\">\r\n    <h3>Pending Expenses Requiring Approval</h3>\r\n</div>\r\n\r\n<table>\r\n    <thead>\r\n        <tr>\r\n            <th>Expense Name</th>\r\n            <th>Expense</th>\r\n            <th>Status</th>\r\n            <th>Approval Required</th>\r\n        </tr>\r\n    </thead>\r\n    <tbody>\r\n        {%- set pending_expenses = frappe.db.sql(\"\"\"\r\n            SELECT \r\n                name AS 'Expense Name', \r\n                amount AS Expense, \r\n                status, \r\n                approval_required \r\n            FROM `tabExpenses`\r\n            WHERE status = 'Pending' \r\n                AND approval_required = 1\r\n        \"\"\", as_dict=True) -%}\r\n        {%- for record in pending_expenses -%}\r\n            <tr>\r\n                <td>{{ record['Expense Name'] }}</td>\r\n                <td>{{ record['Expense'] }}</td>\r\n                <td>{{ record.status }}</td>\r\n                <td>{{ record.approval_required }}</td>\r\n            </tr>\r\n        {% endfor %}\r\n    </tbody>\r\n</table>\r\n\r\n</body>\r\n</html>\r\n",
